---
import Base from '../layouts/Base.astro';
import Letterhead from '../components/Letterhead.astro';
import Signature from '../components/Signature.astro';
import Subscribe from '../components/Subscribe.astro';
import { createGhostClient } from '@maconphillips/ghost-client';

export async function getStaticPaths() {
    const ghost = createGhostClient({
        url: import.meta.env.GHOST_URL,
        key: import.meta.env.GHOST_KEY
    });

    const posts = await ghost.getPosts({
        tagFilter: 'tag:hash-personal,tag:hash-public'
    });

    return posts.map((post) => ({
        params: { slug: post.slug },
    }));
}

const ghost = createGhostClient({
    url: import.meta.env.GHOST_URL,
    key: import.meta.env.GHOST_KEY
});

const { slug } = Astro.params;
const post = await ghost.getPost(slug);
---

<Base title={`${post.title} â€” Macon Phillips`} description={post.excerpt}>
    <article class="letter">
        <div class="letter-content">
            <header class="letter-header">
                <Letterhead date={post.published_at} />
                <h1 class="letter-title">{post.title}</h1>
            </header>

            <div class="letter-body" set:html={post.html} />

            <Signature tags={post.tags} />
        </div>
    </article>

    <Subscribe ghostUrl={import.meta.env.GHOST_URL} />
</Base>

<!-- Rich text content styles (must be global to reach into set:html) -->
<style is:global>
.letter-body {
    font-size: 1.2rem;
    line-height: 1.78;
}

.letter-body p {
    margin-bottom: 1.5rem;
}

.letter-body p:last-child {
    margin-bottom: 0;
}

.letter-body h2 {
    font-family: var(--font-headline);
    font-size: 1.35rem;
    font-weight: 500;
    margin: 2rem 0 1rem;
}

.letter-body h3 {
    font-family: var(--font-headline);
    font-size: 1.15rem;
    font-weight: 500;
    margin: 1.5rem 0 0.75rem;
}

.letter-body blockquote {
    border-left: 3px solid var(--color-rule);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-muted);
}

.letter-body ul,
.letter-body ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
}

.letter-body li {
    margin-bottom: 0.5rem;
}

.letter-body a {
    color: var(--color-accent);
    text-decoration: underline;
}

.letter-body img {
    margin: 1.5rem 0;
}

.letter-body pre {
    background: #f5f5f5;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.85rem;
}

.letter-body code {
    font-size: 0.85em;
    background: #f5f5f5;
    padding: 0.1em 0.3em;
}

