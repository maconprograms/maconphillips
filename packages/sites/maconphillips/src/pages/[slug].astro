/* Ghost Editor Cards */
.kg-card {
    margin: 1.5rem 0;
}

.kg-image-card img {
    width: 100%;
}

.kg-bookmark-card {
    background: #fff;
    border: 1px solid var(--color-card-border);
}

.kg-bookmark-container {
    display: flex;
    text-decoration: none;
}

.kg-bookmark-content {
    flex: 1;
    padding: 1rem;
}

.kg-bookmark-title {
    font-size: 1rem;
    color: var(--color-headline);
}

.kg-bookmark-description {
    font-size: 0.9rem;
    color: var(--color-muted);
    margin-top: 0.5rem;
}

.kg-bookmark-metadata {
    font-size: 0.8rem;
    color: var(--color-muted);
    margin-top: 0.5rem;
}

.kg-bookmark-thumbnail {
    width: 150px;
}

.kg-bookmark-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
</style>
