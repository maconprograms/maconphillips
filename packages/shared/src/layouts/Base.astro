---
interface Props {
  title: string;
  description?: string;
  siteName?: string;
  siteLocation?: string;
}

const {
  title,
  description = "Letters from Warren, Vermont",
  siteName = "Macon Phillips",
  siteLocation = "Warren, Vermont"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    <meta name="description" content={description}>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant:ital,wght@0,400;1,400&family=Cormorant+SC&family=Patua+One&family=Tangerine:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <div class="reading-progress" id="reading-progress"></div>

    <div class="site-wrapper">
        <div class="page" id="main-content">
            <a href="/" class="letterhead">
                <div class="letterhead-name">{siteName}</div>
                <div class="letterhead-location">{siteLocation}</div>
            </a>
            <slot />
        </div>
    </div>

    <nav class="mobile-nav">
        <a href="/" class="mobile-nav-item">Home</a>
        <button class="mobile-nav-item" aria-label="Topics" data-topics-toggle>Topics</button>
    </nav>
</body>
</html>

<style is:global>
@import '@maconphillips/shared/styles/global.css';
</style>
